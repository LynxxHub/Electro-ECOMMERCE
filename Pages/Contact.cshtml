@page
@model ContactModel
@{
    ViewData["Title"] = "Contact Us";
}

<div class="contact-page">
    <!-- BREADCRUMB -->
    <div id="breadcrumb" class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <div class="col-md-12">
                    <h3 class="breadcrumb-header">Contact</h3>
                    <ul class="breadcrumb-tree">
                        <li><a href="#">Home</a></li>
                        <li class="active">Contact</li>
                    </ul>
                </div>
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /BREADCRUMB -->

    <div class="contact-container">
        <div class="company-info">
            <h2>Company Information</h2>
            <br />
            <p>
                <strong>XYZ Electronics</strong><br>
                123 Business Rd., Business City, BC 54321
            </p>
            <p class="contact-icon"><span class="fa fa-phone"></span> (555) 123-4567</p>
            <p class="contact-icon"><span class="fa fa-envelope"></span> contact@xyzelectronics.com</p>
        </div>

        <div class="contact-divider"></div>

        <div class="contact-form">
            <h2>Get in Touch</h2>
            <form action="#" method="post">
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="name" required>
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" required>
                </div>
                <div class="form-group">
                    <label for="message">Message:</label>
                    <textarea id="message" name="message" required></textarea>
                </div>
                <button type="submit" class="submit-btn">Send Message</button>
            </form>
        </div>
    </div>
</div>
